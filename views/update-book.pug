extends layout.pug

block content 
  form(action="/books/" + book.id + "?_method=PUT", method="post")
    p
      label(for='title') Title:
      input(id='title' name='title', type='text', value=book.title)
    p
      label(for='author') Author:
      input(id='author' name='author', type='text', value=book.author)
    p
      label(for='genre') Genre:
      input(id='genre' name='genre', type='text', value=book.genre)
    p
      label(for='year') Year:
      input(id='year' name='year', type='text', value=book.year)
    p
      input(type='submit', value='Update Book')
  form(method='post', action='/books/' + book.id + '/delete', onsubmit="return confirm('Do you really want to delete this book?');")
    p
      a.button(href='/') Cancel
    p
      input(type='submit', value='Delete Book')
